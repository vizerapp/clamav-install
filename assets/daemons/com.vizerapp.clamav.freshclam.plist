<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>Label</key>
	<string>com.vizerapp.clamav.freshclam</string>

	<key>ProgramArguments</key>
	<array>
        <string>/opt/homebrew/bin/freshclam</string>
		<string>--config-file=/opt/homebrew/etc/clamav/freshclam.conf</string>
	</array>

	<key>RunAtLoad</key>
	<true/>

    <key>StartCalendarInterval</key>
    <array>
        <dict>
            <key>Hour</key>
            <integer>8</integer>

            <key>Minute</key>
            <integer>27</integer>
        </dict>

        <dict>
            <key>Hour</key>
            <integer>16</integer>

            <key>Minute</key>
            <integer>27</integer>
        </dict>

        <dict>
            <key>Hour</key>
            <integer>0</integer>

            <key>Minute</key>
            <integer>27</integer>
        </dict>
    </array>

    <key>StandardOutPath</key>
    <string>/opt/homebrew/var/log/freshclam.log</string>
    <key>StandardErrorPath</key>
    <string>/opt/homebrew/var/log/freshclam.log</string>
</dict>
</plist>
