<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>Label</key>
	<string>com.vizerapp.clamav.clamdscan.volumes</string>

	<key>ProgramArguments</key>
	<array>
        <string>/opt/homebrew/etc/clamav/bin/scan_volumes</string>
	</array>

    <key>StartInterval</key>
    <integer>60</integer>

    <key>ThrottleInterval</key>
    <integer>10</integer>

    <key>StandardOutPath</key>
    <string>/opt/homebrew/var/log/clamdscan.log</string>
    <key>StandardErrorPath</key>
    <string>/opt/homebrew/var/log/clamdscan.log</string>
</dict>
</plist>
